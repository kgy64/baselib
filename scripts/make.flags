PUBLIC_INCLUDE_DIRS      =  $(shell find -L $(PROJECT_ROOT) -name include -exec ls -d {}/public 2>/dev/null \;)
export PUBLIC_INCLUDES   =  $(PUBLIC_INCLUDE_DIRS:%=-I%)

export PKGCONFIG         =  $(shell which pkg-config 2>/dev/null)
export MY_CLUTTER_FLAGS  =  $(shell test "$(BASE_LIBRARIES)" && "$(PKGCONFIG)" --cflags $(BASE_LIBRARIES) 2>/dev/null)
export MY_CLUTTER_LIBS   =  $(shell test "$(BASE_LIBRARIES)" && "$(PKGCONFIG)" --libs $(BASE_LIBRARIES) 2>/dev/null)

